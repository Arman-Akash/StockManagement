@model ShopManagement.Entity.Models.Transfer
@{
  Layout = "../shared/_layoutMTex.cshtml";
  ViewData["Date"] = "12-05-2021";
}
@{ 
    var sl = 0;
}
<div class="Row">
    <div class="col-8 text-left">
        <h6>Bill No.</h6>
    </div>
    <div class="col-4" style="float:right; margin-top:-25px;">
        <div class="Row">
            <div class="col-6">
                <h6>Date :</h6>
            </div>
            <div class="col-12" style="border-bottom:1px dashed; margin-left:50px; margin-top:-30px">
                @Model.TransferDate.ToString("dd MM yyyy")
            </div>
        </div>
    </div>
</div>
<div class="Row">
    <div class="col-2 text-left">
        <h6>Name :</h6>
    </div>
    <div class="col-7 text-left" style="border-bottom:1px dashed; margin-left:80px; margin-top:-30px">
        @Model.BranchName
    </div>
    <div class="col-4" style="float:right; margin-top:-25px;">
        <div class="Row">
            <div class="col-7">
                <h6>Order No :</h6>
            </div>
            <div class="col-7" style="border-bottom:1px dashed; margin-left:90px; margin-top:-30px">
                8789
            </div>
        </div>
    </div>
</div>
<div class="Row">
    <div class="col-2 text-left">
        <h6>Address :</h6>
    </div>
    <div class="col-12 text-left" style="border-bottom:1px dashed; margin-left:70px;margin-top:-30px">
        @Model.Branch.Location
    </div>
</div>
<div class="Row" style="margin-bottom:20px">
    <div class="col-3 text-left">
        <h6>Phone No :</h6>
    </div>
    <div class="col-12 text-left" style="border-bottom:1px dashed; margin-left:85px;margin-top:-30px">
        @Model.Branch.PhnNumber
    </div>
</div>
<div class="row">
    <div class="col">
        <table class="table table-bordered">
              <thead>
                <tr>
                  <th scope="col">SL</th>
                  <th scope="col">Description of Goods</th>
                  <th scope="col">Quantity</th>
                  <th scope="col">Unit Price</th>
                  <th scope="col">Amount</th>
                </tr>
              </thead>
              <tbody>
                   @foreach (var item in Model.TransferDetails)
                        {
                <tr>
                  <td>@(++sl)</td>
                  <td>@item.Product.ProductCode @item.Product.ProductName</td>
                  <td>@item.Quantity @item.Product.Unit.Name</td>
                  <td>@item.Rate</td>
                  <td>@item.Amount</td>
                </tr>
                        }
              </tbody>
        </table>
    </div>
</div>

<div class="Row" style="margin-top:10px;">
    <div class="col-1 text-left">
        <h6>Say</h6>
    </div>
    <div class="col-12 text-left" style="border-bottom:1px dashed; margin-left:50px;">
    </div>
</div>
<div class="Row" style="margin-top:30px;">
    <div class="col-12 text-left" style="border-bottom:1px dashed; margin-left:50px;">
    </div>
</div>
<div class="Row" style="margin-top:30px;">
    <div class="col text-left" style="margin-top:10px;">
        <h6><span style=" border-top: 1px solid;">Received By</span></h6>
    </div>
    <div class="col text-right" style="margin-top:-20px;">
        <h6><span style=" border-top: 1px solid;">Authorised Signature</span></h6>
    </div>
</div>